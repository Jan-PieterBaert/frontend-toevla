{{#each @experience.pointOfInterest.experiences as |exp|}}
  <ScoreFetcher @subject={{exp}} @node={{@node}} as |etns|>
    <WidgetChildren::WhenNodeShouldRender @node={{@node}} @experience={{exp}}>
      <li class="au-w-section-list__item">
        <AuCollapsableSection @buttonTitle="Circuleren - {{exp.title}}" @score={{etns.score}}>
          <ul class="au-w-criterium-list">
            {{#each this.sortedChildren as |child|}}
              <WidgetChildren::ChildLevel3 @node={{child}} @experience={{exp}}/>
            {{/each}}
          </ul>
        </AuCollapsableSection>
      </li>
    </WidgetChildren::WhenNodeShouldRender>
  </ScoreFetcher>
{{/each}}