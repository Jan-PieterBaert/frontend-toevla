{{#each @subject.experiences as |exp|}}
  <WidgetChildren::WhenNodeShouldRender @node={{@node}} @subject={{exp}}>
    <li class="au-w-section-list__item">
      <ScoreFetcher @subject={{exp}} @node={{@node}} as |etns|>
        <AuCollapsableSection @buttonTitle="Beleving - {{exp.title}}" @score={{etns.score}}>
          <NodeCommentary @node={{etns}} />
          <ul class="au-w-criterium-list">
            {{#each this.sortedChildren as |child|}}
              <WidgetChildren::ChildLevel3 @node={{child}} @subject={{exp}}/>
            {{/each}}
          </ul>
        </AuCollapsableSection>
      </ScoreFetcher>
    </li>
  </WidgetChildren::WhenNodeShouldRender>
{{/each}}
