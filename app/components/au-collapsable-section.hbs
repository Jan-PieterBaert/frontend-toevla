<h4 class="au-w-collapsable-section-title" role="text">
  <button {{on "click" this.openSection}} aria-expanded="{{if this.sectionOpen "true" "false"}}" class="au-w-collapsable-section-button">
    <span class="au-w-collapsable-section-title-group">
      {{#if @check}}
      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" class="au-w-icon au-w-icon--active" aria-hidden="true">
        <path d="M12,2 C17.514,2 22,6.486 22,12 C22,17.515 17.514,22 12,22 C6.486,22 2,17.515 2,12 C2,6.487 6.486,2 12,2 Z M17.1017,6.5 L10.2203,14.2234 L6.42374,11.1809 L5,13.0532 L10.6949,17.5 L19,7.90426 L17.1017,6.5 Z"/>
      </svg>
      <span class="au-u-hidden-visually">In orde:</span>
      {{else}}
        {{#if @info}}
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" class="au-w-icon au-w-icon--faded" aria-hidden="true" >
          <path d="M12,2 C17.514,2 22,6.486 22,12 C22,17.515 17.514,22 12,22 C6.486,22 2,17.515 2,12 C2,6.487 6.486,2 12,2 Z M12,9.15818147 L9.50755266,9.15818147 L9.50755266,11.6506288 L10.7537763,11.6506288 L10.7537763,15.3892998 L8.26132899,15.3892998 L8.26132899,17.8817472 L15.738671,17.8817472 L15.738671,15.3892998 L13.2462237,15.3892998 L13.2462237,10.4044051 C13.2462237,9.71648968 12.6891617,9.15818147 12,9.15818147 L12,9.15818147 Z M12,5.10795455 C11.1396072,5.10795455 10.4422204,5.80539116 10.4422204,6.66573413 C10.4422204,7.52607711 11.1396072,8.22351372 12,8.22351372 C12.8603928,8.22351372 13.5577796,7.52607711 13.5577796,6.66573413 C13.5577796,5.80539116 12.8603928,5.10795455 12,5.10795455 Z"/>
        </svg>
        <span class="au-u-hidden-visually">Info:</span>
        {{else}}
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" class="au-w-icon au-w-icon--alert" aria-hidden="true">
            <path d="M12,2 C17.514,2 22,6.486 22,12 C22,17.515 17.514,22 12,22 C6.486,22 2,17.515 2,12 C2,6.487 6.486,2 12,2 Z M12,4 C7.589,4 4,7.589 4,12 C4,16.411 7.589,20 12,20 C16.411,20 20,16.411 20,12 C20,7.589 16.411,4 12,4 Z M16.4519734,7.5926708 L18.3502734,8.9969308 L11.3446266,17.1531808 L5.64972656,12.7063808 L7.07346656,10.8340808 L10.8700266,13.8765808 L16.4519734,7.5926708 Z"/>
          </svg>
          <span class="au-u-hidden-visually">Gedeeltelijk in orde:</span>
        {{/if}}
      {{/if}}
      {{@buttonTitle}}
    </span>
    <svg aria-hidden="true" focusable="false" viewBox="0 0 10 10"  class="au-w-collapsable-section-icon">
      <rect class="au-w-vert" height="7" width="1" y="1" x="4"/>
      <rect height="1" width="7" y="4" x="1"/>
    </svg>
  </button>
</h4>
{{#if this.sectionOpen}}
{{#auto-focus '.au-w-collapsable-section-content'}}
<div class="au-w-collapsable-section-content" tabindex="0">
  {{yield}}
</div>
{{/auto-focus}}
{{/if}}