{{#if this.modalOpen}}
<EmberWormhole @to={{this.destinationElementId}}>
<div class="au-w-modal-background {{if this.modalOpen "is-visible"}}" role="presentation"></div>
<div id="{{@id}}" class="au-w-modal {{if this.modalOpen "is-visible"}} {{@theme}}" role="dialog" aria-describedby="au-w-modal-title-{{@id}}" tabindex="-1" {{focus-trap isActive=this.modalOpen focusTrapOptions=(hash onDeactivate=(fn this.closeModal) initialFocus=".au-w-modal__title" clickOutsideDeactivates=true)}}>
  <div class="au-w-modal__header">
    <h1 id="au-w-modal-title-{{@id}}" class="au-w-modal__title" tabindex="-1">
      {{#if @check}}
      <svg xmlns="http://www.w3.org/2000/svg" class="au-w-icon au-w-icon--active" viewBox="0 0 44 44" aria-hidden="true">
        <path d="M22,3.66666667 C11.8708333,3.66666667 3.66666667,11.8708333 3.66666667,22 C3.66666667,32.12 11.8708333,40.3333333 22,40.3333333 C32.12,40.3333333 40.3333333,32.12 40.3333333,22 C40.3333333,11.8708333 32.12,3.66666667 22,3.66666667 Z M18.3333333,31.1666667 L9.16666667,22 L11.7608333,19.4058333 L18.3333333,25.9783333 L32.2391667,12.0725 L34.8333333,14.6666667 L18.3333333,31.1666667 Z"/>
