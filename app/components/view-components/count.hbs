{{#if (get @experience @key)}}
{{#component @itemComponent check=(get @experience @key)}}
  {{@node.title}}
  <p class="au-w-info-text">
    {{#if (get @experience @key)}}
      {{get @experience @key}}
    {{/if}}
  </p>
{{/component}}
{{else}}
  {{#component @itemComponent check=false}}
    {{@node.title}}
  {{/component}}
{{/if}}