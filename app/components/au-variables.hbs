<style>
  :root {
    {{#if @font}}
    --au-font: {{@font}};
    {{else}}
    --au-font: BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, Arial, sans-serif;
    {{/if}}
    {{#if @bold}}
    --au-bold: {{@bold}};
    {{else}}
    --au-bold: 700;
    {{/if}}
    {{#if @medium}}
    --au-medium: {{@medium}};
    {{else}}
    --au-medium: 600;
    {{/if}}
    {{#if @regular}}
    --au-regular: {{@regular}};
    {{else}}
    --au-regular: 500;
    {{/if}}
    {{#if @check}}
    --au-check: {{@check}};
    {{else}}
    --au-check: #0E5EB8;
    {{/if}}
    {{#if @link}}
    --au-link: {{@link}};
    {{else}}
    --au-link: #0E5EB8;
    {{/if}}
    {{#if @linkHover}}
    --au-link-hover: {{@linkHover}};
    {{else}}
    --au-link-hover: #0F6FD7;
    {{/if}}
    {{#if @error}}
    --au-error: {{@error}};
    {{else}}
    --au-error: #D92626;
    {{/if}}
    {{#if @outline}}
    --au-outline: {{@outline}};
    {{else}}
    --au-outline: #FFC515;
    {{/if}}
    --au-white: #FFFFFF;
    --au-black: #202326;
    --au-neutral : #6D7783;
    --au-neutral-light: #CBD2DA;
    --au-neutral-lighter: #E8EBEE;
    --au-neutral-lightest: #F3F5F6;
    --au-neutral-dark: #545B63;
    --au-neutral-darker: #3b4146;
    --au-neutral-darkest: #202326;
  }

  :root[data-theme="dark"] {
    --au-white: #31353a;
    --au-black: #FFFFFF;
    --au-neutral : #CBD2DA;
    --au-neutral-light: #545B63;
    --au-neutral-lighter: #3b4146;
    --au-neutral-lightest: #3b4146;
    --au-neutral-dark: #CBD2DA;
    --au-neutral-darker: #E8EBEE;
    --au-neutral-darkest: #F3F5F6;

    --au-primary: #1075E2;
    --au-primary-light:  #DCECFD;

    {{#if @checkDark}}
    --au-check: {{@checkDark}};
    {{else}}
    --au-check: #AAD0F9;
    {{/if}}
    {{#if @linkDark}}
    --au-link: {{@linkDark}};
    {{else}}
    --au-link: #AAD0F9;
    {{/if}}
    {{#if @linkDarkHover}}
    --au-link-hover: {{@linkDarkHover}};
    {{else}}
    --au-link-hover: #DCECFD;
    {{/if}}
    {{#if @errorDark}}
    --au-error: {{@errorDark}};
    {{else}}
    --au-error: #D92626;
    {{/if}}
  }
</style>