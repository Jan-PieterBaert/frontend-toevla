<style>
  :root {
    {{#if @font}}
    --au-font: {{@font}};
    {{else}}
    --au-font: BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, Arial, sans-serif;
    {{/if}}
    {{#if @bold}}
    --au-bold: {{@bold}};
    {{else}}
    --au-bold: 700;
    {{/if}}
    {{#if @medium}}
    --au-medium: {{@medium}};
    {{else}}
    --au-medium: 600;
    {{/if}}
    {{#if @regular}}
    --au-regular: {{@regular}};
    {{else}}
    --au-regular: 500;
    {{/if}}
    {{#if @check}}
    --au-check: {{@check}};
    {{else}}
    --au-check: #0E5EB8;
    {{/if}}
    {{#if @link}}
    --au-link: {{@link}};
    {{else}}
    --au-link: #0E5EB8;
    {{/if}}
    {{#if @linkHover}}
    --au-link-hover: {{@linkHover}};
    {{else}}
    --au-link-hover: #0F6FD7;
    {{/if}}
    {{#if @error}}
    --au-error: {{@error}};
    {{else}}
    --au-error: #D92626;
    {{/if}}
    {{#if @outline}}
    --au-outline: {{@outline}};
    {{else}}
    --au-outline: #FFC515;
    {{/if}}
  }
</style>