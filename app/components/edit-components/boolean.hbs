<AuCriteriaInline @criterium={{@node.title}} @check={{this.value}}>
  {{#if this.value}}
    {{#if @node.positiveTemplateString}}
        <strong>
          {{@node.positiveTemplateString}}
        </strong>
    {{/if}}
  {{else}}
    {{#if @node.negativeTemplateString}}
        <strong>
          {{@node.negativeTemplateString}}
        </strong>
    {{/if}}
  {{/if}}
</AuCriteriaInline>