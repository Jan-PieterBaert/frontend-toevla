{{#let (array this.value.width this.value.height) as |arrValue|}}
  <Criteria::SelectAreaCriterion
    @value={{arrValue}}
    @treeNode={{@node}}
    as |label check score|>
    {{#if (or label @etns.comment)}}
      <Labels::AreaString @label={{label}} @value={{arrValue}} as |str|>
        <AuCriteriaInline @criterium={{str}} @score={{score}} @etns={{@etns}} />
      </Labels::AreaString>
    {{/if}}
  </Criteria::SelectAreaCriterion>
{{/let}}