<Criteria::SelectStringCriterion
  @value={{this.value}}
  @treeNode={{@node}}
  as |label check|>
  {{#if label}}
    <AuCriteriaInline @criterium={{@node.title}} @check={{check}}>
      <strong><Labels::NumericString @label={{label}} @value={{this.value}} /></strong>
    </AuCriteriaInline>
  {{/if}}
</Criteria::SelectStringCriterion>