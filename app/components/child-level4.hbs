{{#if this.sortedChildren}}
  <AuCriteriaListItem @error='true'>
    {{@node.title}}{{#if this.hack}}: <strong>{{this.hack.score}}</strong>{{/if}}
    <ul>
      {{#each this.sortedChildren as |child|}}
        <ChildLevel5 @node={{child}} @experience={{@experience}}/>
      {{/each}}
    </ul>
  </AuCriteriaListItem>
{{else}}
  <ViewComponents::Generic @node={{@node}} @experience={{@experience}}/>
{{/if}}