    <h3 id="au-w-modal-title-{{@id}}" class="au-w-modal__title au-u-hidden-visually" tabindex="0">
      <span class="au-w-button-link__text">
        {{@title}}
      </span>
    </h3>
    <button type="button" {{on "click" this.closeModal}} class="au-w-modal__close">
