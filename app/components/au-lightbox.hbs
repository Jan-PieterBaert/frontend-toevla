<EmberWormhole @to={{this.destinationElementId}}>
<div class="au-w-modal-background {{if this.modalOpen "is-visible"}}" role="presentation"></div>
<div id="{{@id}}" class="au-w-modal au-w-modal--lightbox  {{if this.modalOpen "is-visible"}} {{@theme}}" role="dialog" aria-describedby="au-w-modal-title-{{@id}}" tabindex="-1" {{focus-trap isActive=this.modalOpen focusTrapOptions=(hash onDeactivate=(fn this.closeModal) initialFocus=".au-w-modal__title" clickOutsideDeactivates=true)}}>
