<ScoreFetcher @experience={{@experience}} @node={{@node}} as |etns|>
  {{#if this.sortedChildren}}
    <WidgetChildren::WhenNodeShouldRender @node={{@node}} @experience={{@experience}}>
      <AuCriteriaItem @criterium={{@node.title}} @score={{etns.score}} |InfoText|>
        {{#if etns.comment.length}}
          <InfoText>{{etns.comment}}</InfoText>
        {{/if}}
        <ul class="au-w-criterium-list au-w-criterium-list--detail">
          {{#each this.sortedChildren as |child|}}
            <WidgetChildren::ChildLevel6 @node={{child}} @experience={{@experience}}/>
          {{/each}}
        </ul>
      </AuCriteriaItem>
    </WidgetChildren::WhenNodeShouldRender>
  {{else}}
    <EditComponents::Generic @node={{@node}} @experience={{@experience}} @etns={{etns}} />
  {{/if}}
</ScoreFetcher>