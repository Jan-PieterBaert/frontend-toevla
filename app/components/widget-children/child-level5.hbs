<ScoreFetcher @subject={{@subject}} @node={{@node}} as |etns|>
  {{#if this.sortedChildren}}
    <WidgetChildren::WhenNodeShouldRender @node={{@node}} @subject={{@subject}}>
      <AuCriteriaItem @criterium={{@node.title}} @score={{etns.score}} as |InfoText|>
        <NodeCommentary @node={{etns}} />
        <ul class="au-w-criterium-list au-w-criterium-list--detail">
          {{#each this.sortedChildren as |child|}}
            <WidgetChildren::ChildLevel6 @node={{child}} @subject={{@subject}}/>
          {{/each}}
        </ul>
      </AuCriteriaItem>
    </WidgetChildren::WhenNodeShouldRender>
  {{else}}
    <EditComponents::Generic @node={{@node}} @subject={{@subject}} @etns={{etns}} />
  {{/if}}
</ScoreFetcher>