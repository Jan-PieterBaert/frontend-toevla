{{#if this.sortedChildren}}
  <ScoreFetcher @experience={{@experience}} @node={{@node}} as |etns|>
    <AuCriteriaItem @criterium={{@node.title}} @score={{etns.score}}>
      <ul class="au-w-criterium-list au-w-criterium-list--detail">
        {{#each this.sortedChildren as |child|}}
          <WidgetChildren::ChildLevel5 @node={{child}} @experience={{@experience}}/>
        {{/each}}
      </ul>
    </AuCriteriaItem>
  </ScoreFetcher>
{{else}}
  <EditComponents::Generic @node={{@node}} @experience={{@experience}}/>
{{/if}}