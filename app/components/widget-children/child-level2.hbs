{{#if this.handlerComponent}}
  {{component this.handlerComponent node=@node experience=@experience}}
{{else}}
  <li class="au-w-section-list__item">
    <ScoreFetcher @experience={{@experience}} @node={{@node}} as |etns|>
      <WidgetChildren::WhenNodeShouldRender @node={{@node}} @experience={{@experience}}>
        <AuCollapsableSection @buttonTitle="{{@node.title}}" @score={{etns.score}}>
          <ul class="au-w-criterium-list">
            {{#each this.sortedChildren as |child|}}
              <WidgetChildren::ChildLevel3 @node={{child}} @experience={{@experience}}/>
            {{/each}}
          </ul>
        </AuCollapsableSection>
      </WidgetChildren::WhenNodeShouldRender>
    </ScoreFetcher>
  </li>
{{/if}}