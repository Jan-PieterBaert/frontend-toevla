{{#if this.handlerComponent}}
  {{component this.handlerComponent node=@node subject=@subject}}
{{else}}
  <ScoreFetcher @subject={{@subject}} @node={{@node}} as |etns|>
    <li class="au-w-section-list__item">
      <WidgetChildren::WhenNodeShouldRender @node={{@node}} @subject={{@subject}}>
        <AuCollapsableSection @buttonTitle="{{@node.title}}" @score={{etns.score}}>
          <NodeCommentary @node={{etns}} />
          <ul class="au-w-criterium-list">
            {{#each this.sortedChildren as |child|}}
              <WidgetChildren::ChildLevel3 @node={{child}} @subject={{@subject}}/>
            {{/each}}
          </ul>
        </AuCollapsableSection>
      </WidgetChildren::WhenNodeShouldRender>
    </li>
  </ScoreFetcher>
{{/if}}