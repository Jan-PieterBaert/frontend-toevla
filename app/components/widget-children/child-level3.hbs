<ScoreFetcher @experience={{@experience}} @node={{@node}} as |etns|>
  {{#if this.sortedChildren}}
    <AuCriteriaItem @criterium={{@node.title}} @score={{etns.score}} as |InfoText|>
      <InfoText>{{etns.comment}}</InfoText>
      <ul class="au-w-criterium-list au-w-criterium-list--detail">
        {{#each this.sortedChildren as |child|}}
          <WidgetChildren::ChildLevel4 @node={{child}} @experience={{@experience}} />
        {{/each}}
      </ul>
    </AuCriteriaItem>
  {{else}}
    <EditComponents::Generic @node={{@node}} @experience={{@experience}} @etns={{etns}} />
  {{/if}}
</ScoreFetcher>
